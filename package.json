{
  "name": "design-addin",
  "displayName": "Designer",
  "description": "Addin To Go From Design to Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "designAddin.openStudio",
        "title": "Design Addin: Open Studio"
      },
      {
        "command": "designAddin.newIdea",
        "title": "Design Addin: New Idea"
      },
      {
        "command": "designAddin.generateBrief",
        "title": "Design Addin: Generate Brief"
      },
      {
        "command": "designAddin.generateArchitecture",
        "title": "Design Addin: Generate Architecture"
      },
      {
        "command": "designAddin.generateBacklog",
        "title": "Design Addin: Generate Backlog"
      },
      {
        "command": "designAddin.generatePromptForTask",
        "title": "Design Addin: Generate Prompt for Task"
      },
      {
        "command": "designAddin.runTaskWithCodex",
        "title": "Design Addin: Run Task with Codex"
      },
      {
        "command": "designAddin.rescanWorkspaceContext",
        "title": "Design Addin: Rescan Workspace Context"
      }
    ],
    "configuration": {
      "title": "Design Addin",
      "properties": {
        "designAddin.llm.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable LLM-backed artifact generation. Disabled keeps deterministic offline generation."
        },
        "designAddin.llm.provider": {
          "type": "string",
          "enum": [
            "openai",
            "stub"
          ],
          "default": "stub",
          "description": "LLM provider selection. OpenAI is reserved for future integration; stub is deterministic/offline."
        },
        "designAddin.llm.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key placeholder for future LLM provider integration. Prefer secret storage when implemented."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
